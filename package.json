{
  "name": "@mikevalstar/mcp-cookbook",
  "version": "0.1.0",
  "description": "MCP server providing AI coding assistants with reusable recipes and procedures for common development tasks",
  "bin": {
    "mcp-cookbook": "build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "tsc && chmod 755 build/index.js",
    "debug": "npx @modelcontextprotocol/inspector node build/index.js",
    "dev": "nodemon",
    "prepare": "npm run build"
  },
  "keywords": [
    "MCP",
    "AI",
    "cursor",
    "procedures",
    "recipies"
  ],
  "type": "module",
  "author": "Mike Valstar <mike@valstar.dev>",
  "license": "MIT",
  "packageManager": "pnpm@10.8.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "fast-glob": "^3.3.3",
    "fuse.js": "^7.1.0",
    "gray-matter": "^4.0.3",
    "zod": "^3.25.46"
  },
  "devDependencies": {
    "@types/node": "^22.15.29",
    "nodemon": "^3.1.10",
    "typescript": "^5.8.3"
  }
}
